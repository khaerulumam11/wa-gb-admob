<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whatsapp.chattema">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--Recommended Permissions-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/sticker_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name="com.whatsapp.chattema.App"
        android:theme="@style/AppTheme">
        <activity android:name="com.whatsapp.chattema.SplashScreenActivity"
            android:theme="@style/AppFullScreenTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.startapp.sdk.APPLICATION_ID"
            android:value="205768669" />

        <activity
            android:name="com.whatsapp.chattema.DowActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity android:name="com.whatsapp.chattema.HowDowActivity"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity android:name="com.whatsapp.chattema.HowInstActivity"
            android:theme="@style/AppFullScreenTheme"
            ></activity>
        <activity android:name="com.whatsapp.chattema.WallActivity"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity android:name="com.whatsapp.chattema.DetailActivity"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity android:name="com.whatsapp.chattema.HomeActivity"
            android:theme="@style/AppFullScreenTheme"
            />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id"/>

    </application>

</manifest>